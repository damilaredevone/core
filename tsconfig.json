{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "ES2017", "ES6", "ES2015"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "jsx": "react",
    "declaration": true,
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@damilaredev/hooks": ["./packages/hooks"],
      "@damilaredev/modals": ["./packages/modals"]
    },
    "types": ["node", "vite/client", "vitest/globals"]
  },
  "exclude": [
    "**/dist/**",
    "./packages/hooks/**",
    "./packages/components/**",
    "node_modules",
    "configuration/storybook/main.js"
  ]
}
