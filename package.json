{
  "name": "@damilaredev/core",
  "version": "0.0.0",
  "description": "",
  "packageManager": "pnpm@7.0.0",
  "main": "index.ts",
  "scripts": {
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "docs:serve": "npm -C docs run serve",
    "docs:typecheck": "cd docs && pnpm typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix ",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "build": "pnpm -r --filter {packages} run build",
    "clean": "rimraf packages/**/*/{dist,lib,cjs,esm}",
    "test": "vitest run",
    "test:components": "npm -C packages/components run test",
    "release:prepare": "pnpm clean && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damilaredevone/react-components.git"
  },
  "author": "Damilare Anjorin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damilaredevone/react-components/issues"
  },
  "devDependencies": {
    "@damilaredev/eslint-config": "0.0.13",
    "@damilaredev/tsconfig": "1.5.1",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@rollup/plugin-typescript": "8.3.2",
    "@types/react": "18.0.8",
    "@types/react-dom": "18.0.3",
    "autoprefixer": "10.4.7",
    "bumpp": "7.1.1",
    "esbuild": "0.14.38",
    "eslint": "8.14.0",
    "esno": "0.14.1",
    "happy-dom": "3.1.1",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "pnpm": "7.0.0",
    "postcss": "8.4.13",
    "prettier": "2.6.2",
    "react-dom": "18.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.72.0",
    "rollup-plugin-dts": "4.2.1",
    "rollup-plugin-esbuild": "4.9.1",
    "tailwindcss": "3.0.24",
    "typescript": "4.6.4",
    "vite": "2.9.7",
    "vitest": "0.10.4"
  },
  "dependencies": {
    "@damilaredev/utils": "^0.3.0",
    "react": "^18.0.0",
    "tslib": "^2.3.1"
  }
}
