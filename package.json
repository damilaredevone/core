{
  "name": "@damilaredev/core",
  "version": "0.0.0",
  "description": "",
  "packageManager": "pnpm@7.14.0",
  "main": "index.ts",
  "scripts": {
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "docs:serve": "npm -C docs run serve",
    "docs:typecheck": "cd docs && pnpm typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix ",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "build": "pnpm -r --filter {packages} run build",
    "clean": "rimraf packages/**/*/{dist,lib,cjs,esm}",
    "test": "vitest run",
    "test:components": "npm -C packages/components run test",
    "release:prepare": "pnpm clean && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damilaredevone/react-components.git"
  },
  "author": "Damilare Anjorin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damilaredevone/react-components/issues"
  },
  "devDependencies": {
    "@damilaredev/eslint-config": "0.0.17",
    "@damilaredev/tsconfig": "1.5.2",
    "@rollup/plugin-alias": "4.0.2",
    "@rollup/plugin-commonjs": "24.0.0",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-typescript": "11.0.0",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "10.4.13",
    "bumpp": "8.2.1",
    "esbuild": "0.17.0",
    "eslint": "8.31.0",
    "esno": "0.16.3",
    "happy-dom": "8.1.4",
    "husky": "8.0.3",
    "lerna": "6.4.1",
    "pnpm": "7.14.0",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "react-dom": "18.2.0",
    "rimraf": "4.0.5",
    "rollup": "3.10.0",
    "rollup-plugin-dts": "5.1.1",
    "rollup-plugin-esbuild": "5.0.0",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.1"
  },
  "dependencies": {
    "@damilaredev/utils": "^0.3.0",
    "react": "^18.0.0",
    "tslib": "^2.3.1"
  }
}
