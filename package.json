{
  "name": "@damilaredev/core",
  "version": "0.0.0",
  "description": "",
  "packageManager": "pnpm@7.5.0",
  "main": "index.ts",
  "scripts": {
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "docs:serve": "npm -C docs run serve",
    "docs:typecheck": "cd docs && pnpm typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix ",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "build": "pnpm -r --filter {packages} run build",
    "clean": "rimraf packages/**/*/{dist,lib,cjs,esm}",
    "test": "vitest run",
    "test:components": "npm -C packages/components run test",
    "release:prepare": "pnpm clean && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damilaredevone/react-components.git"
  },
  "author": "Damilare Anjorin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damilaredevone/react-components/issues"
  },
  "devDependencies": {
    "@damilaredev/eslint-config": "0.0.15",
    "@damilaredev/tsconfig": "1.5.2",
    "@rollup/plugin-alias": "3.1.9",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@rollup/plugin-typescript": "8.3.4",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "10.4.7",
    "bumpp": "8.2.1",
    "esbuild": "0.14.50",
    "eslint": "8.20.0",
    "esno": "0.16.3",
    "happy-dom": "6.0.4",
    "husky": "8.0.1",
    "lerna": "5.3.0",
    "pnpm": "7.5.0",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "react-dom": "18.2.0",
    "rimraf": "3.0.2",
    "rollup": "2.77.2",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-esbuild": "4.9.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.7.4",
    "vite": "3.0.3",
    "vitest": "0.19.1"
  },
  "dependencies": {
    "@damilaredev/utils": "^0.3.0",
    "react": "^18.0.0",
    "tslib": "^2.3.1"
  }
}
