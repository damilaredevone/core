{
  "name": "@damilaredev/core",
  "version": "0.0.0",
  "description": "",
  "packageManager": "pnpm@7.25.1",
  "type": "module",
  "scripts": {
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "docs:serve": "npm -C docs run serve",
    "docs:typecheck": "cd docs && pnpm typecheck",
    "typecheck": "tsc --noEmit",
    "typecheck:why": "tsc --noEmit --explainFiles > explainTypes.txt",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix ",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "build": "pnpm -r --filter {packages/**} run build",
    "clean": "rimraf packages/**/*/{dist,lib,cjs,esm}",
    "test": "vitest run",
    "test:utils": "pnpm -r --filter {packages/utils} run test",
    "test:components": "npm -C packages/components run test",
    "release:prepare": "pnpm clean && pnpm test",
    "test:all": "CI=true pnpm -r --stream run test --allowOnly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/damilaredevone/core.git"
  },
  "author": "Damilare Anjorin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/damilaredevone/core/issues"
  },
  "devDependencies": {
    "@antfu/ni": "^0.19.0",
    "@babel/core": "^7.20.12",
    "@damilaredev/components": "workspace:*",
    "@damilaredev/eslint-config": "0.0.17",
    "@damilaredev/hooks": "workspace:*",
    "@damilaredev/tsconfig": "1.5.2",
    "@rollup/plugin-alias": "4.0.3",
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-typescript": "11.0.0",
    "@types/node": "^18.11.18",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "10.4.13",
    "bumpp": "8.2.1",
    "esbuild": "0.17.4",
    "eslint": "8.32.0",
    "esno": "0.16.3",
    "happy-dom": "8.1.5",
    "husky": "8.0.3",
    "lerna": "6.4.1",
    "lint-staged": "^13.1.0",
    "node-sass": "^8.0.0",
    "pnpm": "7.25.1",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "react": "^18.2.0",
    "react-dom": "18.2.0",
    "rimraf": "4.1.1",
    "rollup": "3.10.1",
    "rollup-plugin-dts": "5.1.1",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "3.2.4",
    "tslib": "^2.3.1",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.3"
  },
  "dependencies": {
    "@damilaredev/utils": "^0.5.0"
  },
  "resolutions": {
    "rollup": "^2.79.1",
    "@damilaredev/hooks": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
